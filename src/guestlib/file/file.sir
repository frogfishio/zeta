    let done: ptr = zi_alloc(128:i32)
    let dn: i32 = file_aio_submit_and_wait(aio_h, file_aio_op_unlink(), 1:i32, pl, 16:i32, timeout_ms, done, 128:i32)
    let ignored_free: i32 = zi_free(pl)

