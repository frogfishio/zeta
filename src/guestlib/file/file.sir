    let ignored_free: i32 = zi_free(done)
    let ignored_end: i32 = zi_end(aio_h)

    let is_timeout: bool = i32.cmp.eq(dn, -2:i32)
    term.ret value:select(i32, ok_done, 0:i32, select(i32, is_timeout, -20:i32, -1:i32))
