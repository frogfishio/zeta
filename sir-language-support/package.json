{
  "name": "sir-language-support",
  "displayName": "SIR Language Support",
  "description": "Syntax highlighting + diagnostics for SIR/SIRC",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:sir",
    "onLanguage:sirjsonl",
    "onCommand:sir-language-support.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "sir",
        "aliases": [
          "SIR",
          "sir"
        ],
        "extensions": [
          ".sir"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "sirjsonl",
        "aliases": [
          "SIR JSONL",
          "sir.jsonl"
        ],
        "extensions": [
          ".sir.jsonl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sir",
        "scopeName": "source.sir",
        "path": "./syntaxes/sir.tmLanguage.json"
      },
      {
        "language": "sirjsonl",
        "scopeName": "source.sirjsonl",
        "path": "./syntaxes/sirjsonl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "sir",
        "path": "./snippets/sir.code-snippets"
      }
    ],
    "commands": [
      {
        "command": "sir-language-support.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
