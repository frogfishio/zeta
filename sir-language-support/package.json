{
  "name": "sir-language-support",
  "displayName": "SIR Language Support",
  "description": "Syntax highlighting + diagnostics for SIR/SIRC",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:sir",
    "onLanguage:sirjsonl",
    "onCommand:sir-language-support.helloWorld",
    "onCommand:sir-language-support.verifyCurrentFile",
    "onCommand:sir-language-support.clearDiagnostics"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "sir",
        "aliases": [
          "SIR",
          "sir"
        ],
        "extensions": [
          ".sir"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "sirjsonl",
        "aliases": [
          "SIR JSONL",
          "sir.jsonl"
        ],
        "extensions": [
          ".sir.jsonl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sir",
        "scopeName": "source.sir",
        "path": "./syntaxes/sir.tmLanguage.json"
      },
      {
        "language": "sirjsonl",
        "scopeName": "source.sirjsonl",
        "path": "./syntaxes/sirjsonl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "sir",
        "path": "./snippets/sir.code-snippets"
      }
    ],
    "commands": [
      {
        "command": "sir-language-support.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "sir-language-support.verifyCurrentFile",
        "title": "SIR: Verify current file"
      },
      {
        "command": "sir-language-support.clearDiagnostics",
        "title": "SIR: Clear diagnostics"
      }
    ],
    "configuration": {
      "title": "SIR Language Support",
      "properties": {
        "sirLanguageSupport.sircPath": {
          "type": "string",
          "default": "sirc",
          "description": "Path to the `sirc` executable (used to translate .sir â†’ .sir.jsonl for verification)."
        },
        "sirLanguageSupport.sirccPath": {
          "type": "string",
          "default": "sircc",
          "description": "Path to the `sircc` executable (used for verification and diagnostics)."
        },
        "sirLanguageSupport.lintOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run `sirc --lint` on save and surface diagnostics in the Problems panel."
        },
        "sirLanguageSupport.lintOnType": {
          "type": "boolean",
          "default": false,
          "description": "Run `sirc --lint` while typing (debounced). This is more CPU-intensive than lint-on-save."
        },
        "sirLanguageSupport.lintDebounceMs": {
          "type": "number",
          "default": 400,
          "minimum": 0,
          "description": "Debounce interval (ms) for lint-on-type."
        },
        "sirLanguageSupport.useStrictSirc": {
          "type": "boolean",
          "default": true,
          "description": "When verifying .sir, run `sirc` with --strict (reject ignored attrs and enforce conservative arity)."
        },
        "sirLanguageSupport.useStrictSircc": {
          "type": "boolean",
          "default": true,
          "description": "When verifying .sir/.sir.jsonl, run `sircc` with --verify-strict."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
